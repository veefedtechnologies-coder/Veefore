# VeeFore Admin Panel Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/veefore-admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/veefore-admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@veefore.com

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-encryption-key-here-32-characters-minimum

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here

# AI/LLM Configuration (if using AI features)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Payment Gateway Configuration (if using)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Cloud Storage Configuration (if using)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_2FA=true
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
